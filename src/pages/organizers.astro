---
import PageLayout from "@/layouts/Base.astro";
import OrganizerCard from "@/components/OrganizerCard.astro";
import Section from "@/components/Section.astro";

// Import organizer photos
import ruchenWenPhoto from "@/assets/images/organizers/ruchen-wen.jpg";
import davidPorfirioPhoto from "@/assets/images/organizers/david-porfirio.jpg";
import saadEbeleidyPhoto from "@/assets/images/organizers/saad-elbeleidy.jpg";
import lauraHiattPhoto from "@/assets/images/organizers/laura-hiatt.jpg";
import rossMeadPhoto from "@/assets/images/organizers/ross-mead.jpg";
import andrewSchoenPhoto from "@/assets/images/organizers/andrew-schoen.jpg";
import willieWilsonPhoto from "@/assets/images/organizers/willie-wilson.jpg";
import lauraStegnerPhoto from "@/assets/images/organizers/laura-stegner.jpg";
import ContactCard from "@/components/ContactCard.astro";

const meta = {
  description:
    "Organizers - UR-RAD 2025 AAAI Fall Symposium on Unifying Representations for Robot Application Development",
  title: "Organizers",
};
---

<PageLayout meta={meta}>
  <h1 class="title mb-6">Organizers</h1>

  <Section>
    <div class="max-w-4xl mx-auto">
      <div class="prose prose-citrus max-w-none px-4">
        <p class="text-lg mb-8">
          The UR-RAD 2025 symposium is organized by researchers dedicated to
          advancing robot application development and unifying representations
          in robotics.
        </p>
      </div>
    </div>
  </Section>

  <Section
    title="Organizing Committee"
    subtitle="Meet the researchers organizing UR-RAD 2025"
  >
    <div class="max-w-6xl mx-auto">
      <div
        class="grid gap-4 sm:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mb-8"
      >
        <OrganizerCard
          photo={ruchenWenPhoto}
          name="Ruchen Wen"
          affiliation="Colgate University"
        />
        <OrganizerCard
          photo={davidPorfirioPhoto}
          name="David Porfirio"
          affiliation="George Mason University"
        />
        <OrganizerCard
          photo={saadEbeleidyPhoto}
          name="Saad Elbeleidy"
          affiliation="Peerbots"
        />
        <OrganizerCard
          photo={lauraHiattPhoto}
          name="Laura M. Hiatt"
          affiliation="Naval Research Laboratory"
        />
        <OrganizerCard
          photo={rossMeadPhoto}
          name="Ross Mead"
          affiliation="Semio"
        />
        <OrganizerCard
          photo={andrewSchoenPhoto}
          name="Andrew Schoen"
          affiliation="Semio"
        />
        <OrganizerCard
          photo={willieWilsonPhoto}
          name="Willie Wilson"
          affiliation="Franklin & Marshall College"
        />
        <OrganizerCard
          photo={lauraStegnerPhoto}
          name="Laura Stegner"
          affiliation="George Washington University"
        />
      </div>
    </div>
  </Section>

  <Section
    title="Previous Organizing Committees"
    subtitle="UR-RAD has been successfully organized by dedicated teams of researchers who share a vision for advancing robot application development"
  >
    <div class="max-w-4xl mx-auto">
      <div class="grid gap-4 sm:gap-6 grid-cols-1 md:grid-cols-2 mb-8">
        <div class="p-3 sm:p-4 border border-special-lighter rounded-lg">
          <h3 class="text-base sm:text-lg font-semibold mb-3">UR-RAD 2024</h3>
          <p class="text-xs sm:text-sm text-accent-two">
            Organized as part of the AAAI Fall Symposium series at Westin
            Arlington Gateway, Arlington, VA, USA
          </p>
        </div>

        <div class="p-3 sm:p-4 border border-special-lighter rounded-lg">
          <h3 class="text-base sm:text-lg font-semibold mb-3">UR-RAD 2023</h3>
          <p class="text-xs sm:text-sm text-accent-two">
            The inaugural symposium held at Westin Arlington Gateway, Arlington,
            VA, USA
          </p>
        </div>
      </div>
    </div>
  </Section>

  <Section
    title="Get Involved"
    subtitle="Interested in contributing to the organization of future UR-RAD symposiums?"
  >
    <div class="max-w-4xl mx-auto">
      <div class="prose prose-citrus max-w-none px-4">
        <p class="mb-4">
          We welcome volunteers and collaborators who share our vision for
          advancing robot application development.
        </p>

        <div class="mt-8">
          <ContactCard message="Contact the organizing committee" />
        </div>
      </div>
    </div>
  </Section>
</PageLayout>
