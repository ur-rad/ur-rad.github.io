---
const { variant = "default", showHash = true, title } = Astro.props;

// CSS-классы для вариантов стилей
const badgeClasses = {
  base: "flex items-baseline pt-[0.075rem] drop-shadow-lg active:drop-shadow-none rounded-lg h-6 px-2 text-sm font-medium transition-colors",
  variants: {
    default: "bg-text text-bg hover:brightness-105",
    accent: "bg-accent text-bg hover:brightness-105",
    "accent-base": "bg-accent-base text-bg hover:brightness-105",
    "accent-one": "bg-accent-one text-bg hover:brightness-105",
    "accent-two": "bg-accent-two text-bg hover:brightness-105",
    muted:
      "bg-color-100 text-text hover:bg-accent-two hover:text-bg drop-shadow-none hover:drop-shadow-lg",
    outline: "border border-lightest text-text drop-shadow-none",
    inactive: "text-lighter bg-color-100 drop-shadow-none",
  },
};

const variantClasses =
  badgeClasses.variants[variant as keyof typeof badgeClasses.variants]; // Приведение типов
---

<div class={`${badgeClasses.base} ${variantClasses}`}>
  {showHash && <span class="h-full">#</span>}
  {title}
  <slot />
</div>
