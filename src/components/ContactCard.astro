---
export interface Props {
  message?: string;
  email?: string;
  class?: string;
}

const {
  message = "Questions? Contact us:",
  email = "urrad.symposium@gmail.com",
  class: className = "",
} = Astro.props;
---

<div class={`p-3 sm:p-4 bg-accent-base/5 rounded-lg ${className || ""}`}>
  <div class="text-center mb-3">
    <p>
      <strong>{message}</strong>
      <br />
      Contact us at
      <a href={`mailto:${email}`} class="citrus-link">
        {email}
      </a>
    </p>
  </div>
  <div>
    <slot />
  </div>
</div>
